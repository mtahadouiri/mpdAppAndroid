<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NavDrawerHeader">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:tint="@android:color/black"
        android:alpha="0.1"
        android:src="@drawable/icon_outline_256dp"/>

    <TextView
        android:id="@+id/navdrawer_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/material_screen_edge_spacing"
        android:text="@string/app_name"
        android:fontFamily="sans-serif-thin"
        android:textSize="@dimen/material_font_style_size_headline"
        android:maxLines="1"
        android:textColor="?attr/malp_color_text_accent"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>